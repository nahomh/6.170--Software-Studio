.row-fluid
  .span3
    .friends-list-sidebar
      = render :partial => "users/friends", :locals => {:friends => @friends}
  .span9
    .room-search
      =form_tag root_path, :method => "get", :class => "rooms-search" do
        ="Enter building or building-room number: "
        .input-prepend
          %span.add-on
            %i.icon-search
          = text_field_tag :search, params[:search], :id => 'search_field' 

        .rooms-table
          =render :partial => "rooms/table", :locals => {:rooms => @rooms, :sort => nil, :order => nil, :page => nil, :projector => false, :whiteboard => false, :map_info => @map_info}

    .map-parent
      =render :partial => "map", :locals => {:map_info => @map_info}
