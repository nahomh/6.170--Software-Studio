.row-fluid
  .span3
    -if current_user
      .friends
        -@friends.each do |friend|
          .friend{:id => friend.id}
            = link_to image_tag(@graph.get_picture(friend.uid)) + " friend.name", friend
            .occupying
              -if friend.room
                is studying in #{friend.room.name}
              -else 
                isn't studying right now.
      
  .span9
    %table.table
      %thead
        %th Room Number
        %th Room Name
        %th Description
        %th Current Status
      %tbody
      -for each in @rooms
        - if each.occupied
          %tr.error
            %td=each.room_number
            %td=each.name
            %td=each.description
            -if each.occupied
              %td Occupied
            -else
              %td Available
        -else
          %tr.success
            %td=each.room_number
            %td=each.name
            %td=each.description
            -if each.occupied
              %td Occupied
            -else
              %td Available
    -#
      .location
        %p#demo Coordinates:
      .rooms
        -for room in @rooms
          = render :partial => 'rooms/room', :locals => {:room => room}
        
    =link_to "Rooms", rooms_path
    %br
    =gmaps("map_options" => { "detect_location" => true, "bounds" =>'[{"lat":42.36311,"lng":-71.110425},{"lat":42.350711,"lng":-71.076908}]'},"markers" => { "data" => @json })

